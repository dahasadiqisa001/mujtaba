#:import dp kivy.metrics.dp

<AdminDashboardScreen>:
    name: "admin_dashboard"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: None
            height: dp(60)
            canvas.before:
                Color: rgba: .11, .37, .82, 1
                Rectangle: pos: self.pos; size: self.size
            Label:
                text: "Admin Dashboard"
                color: 1,1,1,1
                font_size: dp(22)
            Button:
                text: "☰"
                font_size: dp(28)
                background_color: 0,0,0,0
                color: 1,1,1,1
                on_release: app.show_menu()
        ScrollView:
            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: dp(14)
                spacing: dp(22)
                Image:
                    source: "assets/school_photo.jpg" if os.path.exists("assets/school_photo.jpg") else "assets/default_school_photo.png"
                    size_hint_y: None
                    height: dp(180)
                    allow_stretch: True
                Label:
                    text: "Welcome, [b]Admin[/b]!"
                    font_size: dp(20)
                    markup: True
                    color: .12,.33,.55,1
                # You will add admin features here in Part 4/5
                Label:
                    text: "Manage Students, Teachers, Parents, Announcements, Events, Resources, Fees, Transport, Cafeteria, Clubs, Achievements, Emergency, Assignments, and more!"
                    font_size: dp(13)
                    color: .3,.3,.3,1

