<ProfileScreen>:
    name: "profile"
    BoxLayout:
        orientation: "vertical"
        padding: dp(18)
        spacing: dp(10)
        Label:
            text: "My Profile"
            font_size: dp(22)
            color: .11, .37, .82, 1
        GridLayout:
            cols: 2
            size_hint_y: None
            height: self.minimum_height
            row_default_height: dp(34)
            row_force_default: True
            spacing: dp(5)
            canvas.before:
                Color: rgba: .96, .98, 1, 1
                Rectangle: pos: self.pos; size: self.size
            # Dynamically fill info in Python code

